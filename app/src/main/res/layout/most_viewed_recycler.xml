<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/ms_image"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@drawable/mcdonald"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/ms_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="McDonalds"
            android:textSize="20sp"
            android:fontFamily="@font/brandon_grotesque_black"
            android:layout_toRightOf="@id/ms_image"
            android:layout_marginLeft="10dp"/>

        <RatingBar
            android:id="@+id/ms_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rating="4"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/ms_image"
            android:layout_below="@id/ms_title" />

        <TextView
            android:id="@+id/ms_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="McDonalds is the brand which is viewed by many peoples."
            android:layout_toRightOf="@id/ms_image"
            android:layout_below="@id/ms_rating"
            android:layout_marginLeft="10dp"
            android:padding="10dp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>